{
  "name": "power-pages-local-server",
  "version": "1.0.0",
  "description": "Local development server for Microsoft Power Pages projects",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "debug": "DEBUG=* node server.js",
    "init": "node init.js",
    "tasks": "node src/task-manager.js --view",
    "task-complete": "node src/task-manager.js --complete",
    "task-reset": "node src/task-manager.js --reset",
    "install-setup": "npm install && node src/task-manager.js --init",
    "mock": "node scripts/mock-manager.js",
    "add-mock": "node scripts/add-mock.js",
    "add-mock-from-file": "node scripts/add-mock-from-file.js",
    "manage-mocks": "node scripts/mock-manager.js",
    "update-proxy": "node scripts/update-proxy-config.js",
    "auth-setup": "node scripts/auth-setup.js",
    "auth-status": "node scripts/auth-simple.js --status",
    "auth-clear": "node scripts/auth-simple.js --clear",
    "auth-refresh": "node scripts/auth-simple.js --refresh",
    "auth-force": "node scripts/auth-simple.js --force",
    "auth": "node scripts/auth-simple.js",
    "auth-simple": "node scripts/auth-simple.js",
    "manage-excludes": "node manage-excludes.js",
    "kill-server": "node scripts/kill-server.js",
    "clean": "rm -rf node_modules package-lock.json && npm install",
    "test": "npm start"
  },
  "dependencies": {
    "@azure/msal-node": "^3.7.3",
    "axios": "^1.6.0",
    "babel-standalone": "^6.26.0",
    "chalk": "^4.1.2",
    "chokidar": "^3.5.3",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.6.1",
    "express": "^4.18.2",
    "express-session": "^1.18.2",
    "fs-extra": "^11.1.1",
    "glob": "^10.4.5",
    "helmet": "^7.0.0",
    "http-proxy-middleware": "^2.0.9",
    "inquirer": "^8.2.7",
    "liquidjs": "^10.9.2",
    "moment": "^2.29.4",
    "morgan": "^1.10.0",
    "open": "^10.2.0",
    "path": "^0.12.7",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "uuid": "^9.0.0",
    "yaml": "^2.3.2"
  },
  "devDependencies": {
    "eslint": "^8.44.0",
    "nodemon": "^3.0.1",
    "prettier": "^3.0.0"
  },
  "keywords": [
    "power-pages",
    "liquid",
    "local-development",
    "microsoft",
    "dynamics",
    "portal"
  ],
  "author": "Development Team",
  "license": "MIT",
  "engines": {
    "node": ">=16.0.0"
  }
}